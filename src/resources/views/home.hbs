<div class="mt-4">
    <h3>Các khóa học</h3>
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-3">
            <div class="card mt-3" style="min-width: 18rem;">
                <a class="btn btn-sm" href="./courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a class="link" href="./courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <hr />
    <h3>Các bài viết</h3>
    <div class="row mb-4">
        {{#each blogs}}
        <div class="col-sm-6 col-lg-3">
            <div class="card mt-3" style="min-width: 18rem;">
                <a class="btn btn-sm" href="./blogs/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.title}}">
                </a>
                <div class="card-body">
                    <a class="link" href="./blogs/{{this.slug}}">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <p class="card-text blog-desc-of">{{this.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>