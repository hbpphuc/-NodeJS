<div class="mt-4">
    <h3>Cập nhật khóa học</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{course.name}}"  name="name">
        </div>
        <div class="mb-3">
            <label for="description">Mô tả khóa học</label>
            <textarea class="form-control" name="description">{{course.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId">Video</label>
            <input type="text" class="form-control" value="{{course.videoId}}" name="videoId">
        </div>
        <div class="mb-3">
            <label for="level">Độ khó</label>
            <input type="text" class="form-control" value="{{course.level}}"  name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>